# =====================================================
# Praxis Seguridad - Configuración Apache
# =====================================================

# Activar motor de reescritura
RewriteEngine On

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Eliminar .php de las URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Páginas de error personalizadas
ErrorDocument 404 /index.php
ErrorDocument 500 /index.php

# =====================================================
# Cabeceras de seguridad
# =====================================================
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Activar protección XSS
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# =====================================================
# Compresión GZIP
# =====================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# =====================================================
# Caché del navegador (MEJORADO PARA SEO)
# =====================================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes - 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Fuentes - 1 año
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # CSS y JS - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # HTML - sin caché
    ExpiresByType text/html "access plus 0 seconds"
    
    # JSON/XML - sin caché
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
</IfModule>

# Cache-Control headers para mejor rendimiento
<IfModule mod_headers.c>
    <FilesMatch "\.(ico|pdf|jpg|jpeg|png|gif|webp|svg|woff|woff2|ttf)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

# =====================================================
# Proteger archivos sensibles
# =====================================================
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|md|json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger directorio includes y api
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
    RewriteRule ^database/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# =====================================================
# Charset UTF-8 (FORZADO)
# =====================================================
AddDefaultCharset UTF-8

# Forzar UTF-8 para archivos específicos
<IfModule mod_mime.c>
    AddCharset UTF-8 .php
    AddCharset UTF-8 .html
    AddCharset UTF-8 .htm
    AddCharset UTF-8 .css
    AddCharset UTF-8 .js
    AddCharset UTF-8 .xml
    
    # MIME types adicionales
    AddType font/woff woff
    AddType font/woff2 woff2
    AddType image/webp webp
</IfModule>

# Header adicional para PHP
<IfModule mod_headers.c>
    <FilesMatch "\.php$">
        Header set Content-Type "text/html; charset=UTF-8"
    </FilesMatch>
</IfModule>

# =====================================================
# Deshabilitar listado de directorios
# =====================================================
Options -Indexes

